<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<update handle="styles" />
	<body>

		<referenceContainer name="page.main.actions">
			<block name="mailplus.site_switcher" class="Magento\Backend\Block\Store\Switcher">
				<arguments>
					<argument name="switch_websites" xsi:type="string">1</argument>
					<argument name="switch_store_groups" xsi:type="string">0</argument>
					<argument name="switch_store_views" xsi:type="string">0</argument>
				</arguments>
			</block>
			<block class="Magento\Backend\Block\Template" name="refresh_status" after="store_switcher"
				template="MailPlus_MailPlus::status/refresh_status.phtml" />


		</referenceContainer>

		<referenceContainer name="content">
			<block name="mailplus_mailplus.version" class="MailPlus\MailPlus\Block\Adminhtml\Status\Version"
				template="MailPlus_MailPlus::status/version.phtml" />
		</referenceContainer>
	</body>
</page>