<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Backend/etc/system_file.xsd">
	<system>
		<tab id="MailPlus" translate="label" sortOrder="50">
			<label>MailPlus Connector</label>
		</tab>

		<section id="mailplus" translate="label" sortOrder="50" showInDefault="1" showInWebsite="1"
			showInStore="1">
			<label>MailPlus Connector Settings</label>
			<tab>MailPlus</tab>
			<resource>MailPlus_MailPlus::system_config</resource>

			<group id="config_per_site" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="0"
				showInStore="0">
				<label>Configure per site or store view</label>
				<field id="sync_synchronize" translate="label" type="label" sortOrder="1" showInDefault="1" showInWebsite="0"
					showInStore="0">
					<label>Please configure the MailPlus Connector settings per site or per store view</label>
				</field>
			</group>

			<group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1"
				showInStore="1">
				<label>General Settings</label>
				<field id="enabled" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1"
					showInStore="1">
					<label>Enabled</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
				<field id="consumer_key" translate="label" type="text" sortOrder="2" showInDefault="0" showInWebsite="1"
					showInStore="1">
					<label>Consumer key</label>
					<validate>required-entry</validate>
				</field>
				<field id="consumer_secret" translate="label" type="text" sortOrder="3" showInDefault="0" showInWebsite="1"
					showInStore="1">
					<label>Consumer secret</label>
					<validate>required-entry</validate>
				</field>
			</group>

			<group id="syncsettings" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1"
				showInStore="1">
				<label>Sync Settings</label>
				<field id="sync_synchronize" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1"
					showInStore="1">
					<label>Synchronize</label>
					<source_model>MailPlus\MailPlus\Model\System\Config\Sync\Synchronize</source_model>
				</field>
				<field id="sync_productspecifications" translate="label" type="select" sortOrder="2" showInDefault="0"
					showInWebsite="1" showInStore="1">
					<label>Product specifications</label>
					<source_model>MailPlus\MailPlus\Model\System\Config\Sync\ProductSpecifications</source_model>
				</field>
			</group>

			<group id="images" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1">
				<label>Image Settings</label>
				<field id="image_format" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1"
					showInStore="1">
					<label>Format images</label>
					<source_model>MailPlus\MailPlus\Model\System\Config\Image\Format</source_model>
				</field>
				
				<field id="image_width_small" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1"
					showInStore="1">
					<label>Small image width</label>
					<validate>required-entry</validate>
					<backend_model>MailPlus\MailPlus\Model\System\Config\Image\Size</backend_model>
				</field>
				<field id="image_height_small" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1"
					showInStore="1">
					<label>Small image height</label>
					<validate>required-entry</validate>
					<backend_model>MailPlus\MailPlus\Model\System\Config\Image\Size</backend_model>
				</field>
				<field id="image_width_large" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="1"
					showInStore="1">
					<label>Large image width</label>
					<validate>required-entry</validate>
					<backend_model>MailPlus\MailPlus\Model\System\Config\Image\Size</backend_model>
				</field>
				<field id="image_height_large" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1"
					showInStore="1">
					<label>Large image height</label>
					<validate>required-entry</validate>
					<backend_model>MailPlus\MailPlus\Model\System\Config\Image\Size</backend_model>
				</field>
			</group>

			<group id="campaigns" translate="label" type="text" sortOrder="4" showInDefault="0" showInWebsite="1"
				showInStore="1">
				<label>MailPlus Campaigns</label>
				<field id="campaigns_newsletter" translate="label" type="select" sortOrder="1" showInDefault="0"
					showInWebsite="1" showInStore="1">
					<label>Newsletter campaign</label>
					<source_model>MailPlus\MailPlus\Model\System\Config\Sync\ProductSpecifications</source_model>
				</field>
				<field id="campaigns_abandonedcart" translate="label" type="select" sortOrder="2" showInDefault="0"
					showInWebsite="1" showInStore="1">
					<label>Abandoned cart campaign</label>
					<source_model>MailPlus\MailPlus\Model\System\Config\Sync\ProductSpecifications</source_model>
				</field>
				<field id="campaigns_productreview" translate="label" type="select" sortOrder="3" showInDefault="0"
					showInWebsite="1" showInStore="1">
					<label>Product review campaign</label>
					<source_model>MailPlus\MailPlus\Model\System\Config\Sync\ProductSpecifications</source_model>
				</field>

			</group>


			<group id="advanced" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1"
				showInStore="1">
				<label>Advanced</label>
				<field id="logging" translate="label" type="select" sortOrder="2" showInDefault="1" showInWebsite="1"
					showInStore="1">
					<label>Debug logging</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>

			</group>

		</section>
	</system>
</config>
